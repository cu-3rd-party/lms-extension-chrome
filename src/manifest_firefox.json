{
    "manifest_version": 3,
    "name": "CU LMS Enhancer",
    "version": "1.3.1",
    "description": "Неофициальная доработка CU LMS, возвращает утерянные функции, добавляет темную тему, отображение весов заданий",
    "permissions": [
        "storage",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "https://my.centraluniversity.ru/*",
        "https://id.centraluniversity.ru/*"
    ],
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://id.centraluniversity.ru/*"],
            "js": ["fix_email_autocomplete.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "browser-polyfill.js",
                "icons/*.svg",
                "icons/*.png",
                "tasks_fix.js",
                "course_card_simplifier.js",
                "courses_fix.js",
                "debug_utils.js",
                "instant_doc_view_fix.js",
                "style_oled.css",
                "emoji_swap.js",
                "style.css",
                "dark_theme.js"
            ],
            "matches": [
                "https://my.centraluniversity.ru/*"
            ]
        }
    ],
    "icons": {
        "128": "icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "cu-lms-enhancer@centraluniversity.ru"
        }
    }
}
